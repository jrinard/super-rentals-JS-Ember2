<div class="container">
  <h1>RentalTopia</h1>

  <div class="nav"><hr>
    {{#link-to 'index'}}Home{{/link-to}} |
    {{#link-to 'about'}}About{{/link-to}} |
    {{#link-to 'contact'}}Contact{{/link-to}} |
    {{#link-to 'announcement'}}News{{/link-to}}
  </div><hr>

  <p>Here is a list of our properties for rent!</p> <br>

  <!-- loop of your rentals -->
  <ul>
    {{#each model as |rental|}}
    <!-- loads rental tile -->
    {{rental-tile rental=rental}} <!-- rendering component on left and from template on right-->
    {{/each}}
  </ul><br><hr>

  <!-- save new rental -->
  {{new-rental saveRental2="saveRental3"}}


</div>
